<style>
    .issuelist-list {
        display: flex;
        flex-wrap:wrap;
    }

    .issuelist-card {
        border: 1px solid black;
        display: flex;
        flex-direction: column;
        color: black;
        margin: 5px;
        text-decoration: none;
        width: min(300px, 35vw);
    }
    .issuelist-card:hover {
        background: black;
        color: white;
    }

    .issuelist-card:hover .issuelist-title {
        border-bottom: 1px solid white;
    }

    img.issuelist-cover {
        height: min(300px, 30vw);
        object-fit: cover;
        margin: 2px;
    }

    .issuelist-title {
        font-size: min(24px,4vw);
        border-bottom: 1px solid black;
        padding-bottom: 2px;
        margin-bottom: 2px;
    }

    .issuelist-subtitle {
        font-family: "Work Sans", sans-serif;
        text-transform: uppercase;
        font-weight: 500;
        font-size: min(18px,3vw);
        opacity: 80%;
    }
</style>

<div class="issuelist-list">
    {% set sortedContents = collections.contents | sortContentsByIssueNo %}

    {%- for issue in sortedContents  -%}
        <a href="{{issue.url}}" class="issuelist-card">
            <img src="{{issue.data.thumbnail}}" class="issuelist-cover">
            <div style="padding:2px 5px">
                <div class="issuelist-title">{{issue.data.title}}</div>
                <div class="issuelist-subtitle">Issue
                    {{issue.data.issueNo}}</div>
            </div>
        </a>
    {% endfor %}
</div>
